# Trading Bot Environment Variables
# Copy this file to .env and fill in your values

# Server Settings
PORT=5000
DEBUG=False

# TradingView-Only Mode (No Exchange Needed)
TRADINGVIEW_ONLY=True
EXCHANGE=none

# Exchange API (Only needed if TRADINGVIEW_ONLY=False)
# API_KEY=your_binance_api_key_here
# API_SECRET=your_binance_secret_here
# SANDBOX_MODE=True

# Account Settings (Simulated Balance for TradingView-only mode)
ACCOUNT_BALANCE=1000.0

# Risk Management üõ°Ô∏è
RISK_PERCENT=1.0
STOP_LOSS_PERCENT=2.0
TAKE_PROFIT_PERCENT=4.0

# Position Limits
MAX_POSITIONS=3
MAX_POSITION_PERCENT=10.0
MIN_POSITION_SIZE=0.001

# Daily Safety Limits
MAX_DAILY_LOSS=50.0
MAX_DAILY_TRADES=10
MAX_CONSECUTIVE_LOSSES=3

# Cooldown
TRADE_COOLDOWN_MINUTES=5

# Webhook Security
WEBHOOK_SECRET=your-secret-key-here